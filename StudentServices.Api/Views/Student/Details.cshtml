@model StudentServices.Api.Models.student1

<div class="container mt-5">

    <div class="card shadow-lg mx-auto" style="max-width:600px;">

        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Student Details</h3>
        </div>

        <div class="card-body">

            <div class="row mb-3">
                <div class="col-4 fw-bold text-muted">
                    Student ID
                </div>

                <div class="col-8">
                    @Model.Id
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-4 fw-bold text-muted">
                    Name
                </div>

                <div class="col-8">
                    @Model.Name
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-4 fw-bold text-muted">
                    Age
                </div>

                <div class="col-8">
                    @Model.Age
                </div>
            </div>

            <div class="d-flex justify-content-between">

                <a asp-action="Index"
                   class="btn btn-secondary">
                    ← Back
                </a>

                <div>
                    <a asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-warning me-2">
                        Edit
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@Model.Id"
                       class="btn btn-danger">
                        Delete
                    </a>
                </div>

            </div>

        </div>

    </div>

</div>
